---
const { title, description, img1, img2 } = Astro.props;
---

<section class="mt-1">
  <div
    class=`gap-16 items-center py-8 px-4 mx-auto max-w-screen-xl lg:grid  lg:py-16 lg:px-6 ${img1 && img2 ? 'lg:grid-cols-2' : ''}`
  >
    <div class="font-light text-white sm:text-lg">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-green-300">
        {title}
      </h2>
      <p class="mb-4">
        {description}
      </p>
    </div>
    {
      img1 && img2 && (
        <div class="grid grid-cols-2 gap-4 mt-8">
          <img
            class="object-cover rounded-lg w-48 h-56"
            src={
              img1 ||
              "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/content/office-long-2.png"
            }
            alt="office content 1"
          />
          <img
            class="object-cover rounded-lg w-48 h-80"
            src={
              img2 ||
              "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/content/office-long-1.png"
            }
            alt="office content 2"
          />
        </div>
      )
    }
  </div>
</section>
