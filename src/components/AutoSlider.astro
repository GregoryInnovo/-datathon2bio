// AutoSlider.astro
---

<div class="slider-container">
  <div class="slider">
    <slot />
  </div>
</div>

<style>
  .slider-container {
    width: 100%;
    overflow: hidden;
  }

  .slider {
    display: flex;
    transition: transform 0.5s ease;
  }

  .slider :global(> *) {
    flex: 0 0 100%;
  }
</style>

<script>
  const slider = document.querySelector(".slider");
  const slides = slider.children;
  let currentIndex = 0;

  function moveSlider() {
    currentIndex = (currentIndex + 1) % slides.length;
    slider.style.transform = `translateX(-${currentIndex * 100}%)`;
  }

  setInterval(moveSlider, 3000); // Cambia de diapositiva cada 3 segundos
</script>
