---
const { avatar, name, role } = Astro.props;
---

<section class="flex flex-row p-6">
  <section class="basis-1/5">
    <img class="rounded w-36 h-36" src={avatar} alt={name} />
  </section>

  <section class="basis-4/5 ml-6">
    <h2 class="text-lg font-bold">{name}</h2>
    <a class="text-sm">{role}</a>
    <p class="text-base">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam
      laudantium nulla dolorem quis cupiditate reprehenderit neque.
    </p>
  </section>
</section>
