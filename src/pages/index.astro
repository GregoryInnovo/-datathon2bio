---

<Layout
  title="Hyperion | Explora la biodiversidad de Colombia"
  currentPage="index"
>
  <section>
    <TestCarousel images={images} client:load />
    <img
      src={"assets/images/a1.png"}
      alt="Aguila mayor"
      class="w-1/2 h-auto absolute top-1/2 right-0 transform"
    />
    <img
      src={"assets/images/a2.png"}
      alt="a2"
      class="w-1/2 h-auto absolute top-1/3 left-0"
    />
  </section>
  <section
    class="flex flex-wrap w-full justify-around md:w-4/5 mx-auto items-center my-6 xl:my-12 lg:w-2/3"
  >
    {
      importantValues.map((value) => (
        <ImportantValue
          title={value.title}
          valueData={value.valueData}
          icon={value.icon}
        />
      ))
    }
  </section>

  <!-- <GeneralDta client:load /> -->
  <main id="slider-data">
    <Carousel slides={dataGeneralList} client:load />
  </main>
</Layout>

<style>
  #slider-data {
    margin: auto;
    padding: 1rem;
    width: 300px;
    max-width: calc(100% - 2rem);
    color: black;
    font-size: 20px;
    line-height: 1.6;
  }

  @media (min-width: 360px) {
    #slider-data {
      width: 360px;
    }
  }

  @media (min-width: 420px) {
    #slider-data {
      width: 370px;
    }
  }

  /* cuando llegue a modo tablet el width sera de 900px */
  @media (min-width: 768px) {
    #slider-data {
      width: 750px;
    }
  }

  @media (min-width: 1068px) {
    #slider-data {
      width: 900px;
    }
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
